<UserControl x:Class="ExpertQuestionnaire.GUI.View.Controls.FootterItemPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition MinWidth="120"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Padding="3" Margin="5" Width="100" HorizontalAlignment="Left" Content="Сохранить" Command="{Binding OkCommand}"/>
        
        <Button Grid.Column="4" Padding="3" Margin="5" Width="100" HorizontalAlignment="Right" Content="Закрыть" Command="{Binding CloseCommand}"/>
    </Grid>
    
</UserControl>
